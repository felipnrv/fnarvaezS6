<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="fnarvaezS6.Vista">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="ACTUALIZAR / ELIMINAR" FontSize="30" HorizontalTextAlignment="Center"></Label>
            <Entry x:Name="txtCodigo" IsReadOnly="False"></Entry>
            <Entry x:Name="txtNombre" Placeholder="Nombre"></Entry>
            <Entry x:Name="txtApellido" Placeholder="Apellido"></Entry>
            <Entry x:Name="txtEdad" Placeholder="Edad"></Entry>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
            </Grid>
            <Button Grid.Row="0" Grid.Column="0" Text="Actualizar" x:Name="btnActualizar" Clicked="btnActualizar_Clicked"></Button>

            <Button Grid.Row="0" Grid.Column="1" Text="Eliminar" x:Name="btnEliminar" Clicked="btnEliminar_Clicked"></Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>