<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="fnarvaezS6.Insertar" NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Ingreso de nuevo Usuario" FontSize="30" HorizontalTextAlignment="Center"></Label>

            <Entry x:Name="txtCodigo" Placeholder="Ingrese el codigo"></Entry>
            <Entry x:Name="txtNombre" Placeholder="Ingrese el Nombre"></Entry>
            <Entry x:Name="txtApellido" Placeholder="Ingrese el Apellido"></Entry>
            <Entry x:Name="txtEdad" Placeholder="Ingrese la Edad"></Entry>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
            </Grid>
            <Button Grid.Row="0" Grid.Column="0" Text="Insertar" x:Name="btnIngresar" Clicked="btnIngresar_Clicked"></Button>

            <Button Grid.Row="0" Grid.Column="1" Text="Regresar" x:Name="btnRegresar" Clicked="btnRegresar_Clicked"></Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>